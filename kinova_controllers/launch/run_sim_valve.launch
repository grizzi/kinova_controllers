<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="debug"   default="false"/>

    <include file="$(find kinova_controllers)/launch/run_sim_common.launch">
        <arg name="run_rviz"    value="false"/>
    </include>

    <include file="$(find robot_control_assets)/launch/load_object.launch" unless="$(arg debug)">
        <arg name="object"  value="valve"/>
        <arg name="x"       value="0.8"/>
        <arg name="y"       value="0.0"/>
        <arg name="z"       value="0.2"/>
        <arg name="roll"    value="3.14"/>
    </include>

    <node name="world_valve_bc"  type="static_transform_publisher"  pkg="tf2_ros"
        args="0.8 0.0 0.2 0 3.14 0 world valve_base" if="$(arg debug)"/>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find kinova_sim)/config/valve_config.rviz"/>

</launch>